@page
@model WebApp.Pages.Permisos.GridModel
@{
}
<div class="container-fluid">


    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Permisos</h5>
        </div>
        <div class="card-body">


            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-hover table table-bordered">
                        <thead>
                            <tr>
                                <th>Acción</th>
                                
                                <th>Rol</th>
                                <th>Mantenimiento</th>
                               

                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdPermiso">
                                            <i class='bx bx-edit-alt'></i>
                                        </a>
                                        <button type="button" class="btn btn-danger" onclick="PermisosGrid.OnclickEliminar(@item.IdPermiso)">
                                            <i class='bx bxs-trash'></i>
                                        </button>
                                    </td>
                                    
                                    <td>@item.Roles.Rol</td>
                                    <td>@item.Mantenimiento</td>
                                    



                                </tr>

                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        var MensajeApp="@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Permisos/Grid.js"></script>
}