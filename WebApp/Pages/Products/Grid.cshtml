@page
@model WebApp.Pages.Products.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Proveedores
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Descripcion</th>
                                <th>Cantidad Disponible</th>
                                <th>Precio Compra</th>
                                <th>Precio Venta</th>
                                <th>Costo Total</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Codigo</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.CantidadDisponible</td>
                                    <td>@item.PrecioCompra</td>
                                    <td>@item.PrecioVenta</td>
                                    <td>@item.CostoTotal</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdProduct">
                                            <i class='bx bx-edit-alt'></i>
                                        </a>
                                        <button type="button" class="btn btn-danger" onclick="GridProveedor.OnclickEliminar(@item.IdProduct)">
                                            <i class='bx bxs-trash'></i>
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

<script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
</script>
<script defer src="~/App/Products/Grid.js"></script>