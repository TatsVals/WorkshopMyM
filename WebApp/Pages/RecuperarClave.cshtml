@page
@model WebApp.Pages.RecuperarClaveModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html dir="ltr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex,nofollow">
    <title>Recuperar Clave</title>
    @await Html.PartialAsync("_HeaderTemplate")

</head>

<body>
    <div class="container-fluid">

        <div id="AppClaveTemporal" data-entity="@JsonSerializer.Serialize(Model.Entity)" class="auth-wrapper d-flex no-block justify-content-center align-items-center">
            <div class="auth-box p-4 bg-white rounded">
                <div id="RecuperarForm">
                    <div class="logo">
                        <h3 class="box-title mb-3">Clave Temporal</h3>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            <form class="form-horizontal mt-3 form-material" id="RecuperarForm">
                                <div class="form-group mb-3">
                                    <div class="">
                                        <input asp-for="Entity.Nombre_Usuario" v-model="Entity.Nombre_Usuario" class="form-control" type="text" required placeholder="Usuario">
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <div class="">
                                        <input asp-for="Entity.Correo" v-model="Entity.Correo" class="form-control" type="email" required placeholder="Direccion de Correo">
                                    </div>
                                </div>

                                <div class="form-group text-center mt-4 mb-3">
                                    <div class="col-xs-12">
                                        <button @@click="Recuperar" class="btn btn-info d-block w-100 waves-effect waves-light" type="button">Enviar Correo</button>
                                    </div>
                                    <a href="Login">Login</a>

                                </div>


                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        @await Html.PartialAsync("_ScriptsTemplate")
        <script defer src="~/App/ClaveTemporal.js"></script>
        
</body>

</html>